<h2>
  <%= image_tag @user.rels[:avatar].href, width: 50, height: 50 %>
  <%= link_to @user.login, @user.rels[:html].href %>
  <%- if @user.name.present? %>
  (<%= @user.name %>)
  <%- end -%>
</h2>

<dl>
  <dt>Company:</dt>
  <dd><%= @user.company %></dd>
  <dt>Website:</dt>
  <dd><%= @user.blog %><dd>
  <dt>Bio:</dt>
  <dd><%= @user.bio %><dd>
</dl>

<h3>Repositories</h3>
<%- if @repos.empty? -%>
<p>Looks like this user has no repos :-(</p>
<%- else -%>
<%- @repos.group_by { |r| r.owner.login }.each do |org, repos| -%>
  <h4><%= link_to org, repos.first.owner.html_url %></h4>
  <dl>
    <%- repos.each do |repo| -%>
      <dt><%= link_to repo.full_name, repo.rels[:html].href %></dt>
      <dd><%= repo.description %></dd>
    <%- end -%>
  </dl>
  <%- end -%>
<%- end -%>
